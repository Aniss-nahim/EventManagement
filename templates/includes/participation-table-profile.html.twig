{% if goingList %}
<div class="container">
    <div class="row justify-content-between">
        <h2>Going</h2>
        <h2 class="badge badge-success p-2">{{goingList|length}}</h2>
    </div>
</div>
<hr>
<div class="overflow-auto" style="height: 300px;">
    {% for participation in goingList %} 
        <div class="card m-2">
            <div class="card-body">
                <div class="row">
                    <div class="col-1">
                        <img class="rounded-circle border-success" style="height: 40px; width: 40px;" src="{{asset('/storage/profiles/default.jpg')}}" alt="event creator" />
                    </div>
                    <div class="col-11">
                        <p class="lead m-0 ml-2"> 
                            {{ participation.participatedEvent.owner.firstName }} 
                            {{ participation.participatedEvent.owner.lastName }}
                        </p>
                        <small class="m-0 ml-2"><i class="fas fa-clock"></i> {{ participation.date|date('Y-m-d') }} </small><br/>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <h3 class="text-success">
                                    <i class="fas fa-bullhorn fa-xs"></i> {{ participation.participatedEvent.title }}
                                </h3>
                                <h6> <i class="fas fa-map-marker-alt"></i> {{participation.participatedEvent.address}}</h6>
                            </div>
                            <div class="col-sm-6 text-right">
                                <p> <i class="fas fa-calendar-day pr-2"></i><strong>Starts On : </strong>{{ participation.participatedEvent.startDate|date('Y-m-d') }}</p>
                                <p> <i class="fas fa-calendar-day pr-2"></i><strong>Starts On : </strong>{{ participation.participatedEvent.startDate|date('Y-m-d') }}</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-12">
                                <p> 
                                    {% for i in range(1, participation.participatedEvent.score) %}
                                    <i class="fas fa-star text-warning"></i>
                                    {% endfor %}
                                </p>
                            </div>
                        </div>            
                    </div>
                </div>
                <div class="row justify-content-end">
                    <a class="btn btn-primary mr-2" href="{{path('event', {id: participation.participatedEvent.id } )}}">View</a>
                    <a class="btn btn-danger" href="{{path('event.participation.delete', {id: participation.id } )}}">Cancel</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endif %}

